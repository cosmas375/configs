general {
    output_format = "i3bar"
    colors = true
    interval = 10
}

order += "volume master"
order += "tztime date"
order += "tztime minsk"
order += "tztime local"

tztime date {
    format = "%d-%m-%Y"
    timezone = "Europe/Warsaw"
}

tztime minsk {
    format = "Minsk: %H:%M:%S"
    timezone = "Europe/Minsk"
}

tztime local {
    format = "Warsaw: %H:%M:%S"
    timezone = "Europe/Warsaw"
}

volume master {
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
